    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const roleSelector = document.getElementById('role-selector');
            const roleButtons = roleSelector.querySelectorAll('.role-button');
            const contentSections = document.querySelectorAll('.content-section');
            const navLinks = document.querySelectorAll('a[href^="#"]');
            const accordionItems = document.querySelectorAll('.accordion-item');

            function filterContent(selectedRole) {
                contentSections.forEach(section => {
                    section.classList.remove('active');
                    if (section.classList.contains(selectedRole) || selectedRole === 'todos') {
                        section.classList.add('active');
                    }
                });

                roleButtons.forEach(button => {
                    button.classList.remove('selected');
                    if (button.dataset.role === selectedRole) {
                        button.classList.add('selected');
                    }
                });
            }

            roleSelector.addEventListener('click', function (e) {
                if (e.target.matches('.role-button')) {
                    const selectedRole = e.target.dataset.role;
                    filterContent(selectedRole);
                }
            });

            navLinks.forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if(targetElement) {
                        targetElement.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            accordionItems.forEach(item => {
                const button = item.querySelector('.accordion-button');
                const content = item.querySelector('.accordion-content');
                const icon = item.querySelector('.accordion-icon');

                button.addEventListener('click', () => {
                    const isExpanded = content.style.maxHeight && content.style.maxHeight !== '0px';
                    
                    document.querySelectorAll('.accordion-content').forEach(c => c.style.maxHeight = '0px');
                    document.querySelectorAll('.accordion-icon').forEach(i => i.textContent = '+');

                    if (!isExpanded) {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        icon.textContent = '-';
                    }
                });
            });

            const ctx = document.getElementById('supervisionChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['MINCETUR', 'SBS / UIF-Perú', 'SUNAT', 'Mininter'],
                    datasets: [{
                        label: 'Rol en la Supervisión',
                        data: [90, 100, 70, 60],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.7)',
                            'rgba(30, 58, 138, 0.7)',
                            'rgba(239, 68, 68, 0.7)',
                            'rgba(16, 185, 129, 0.7)'
                        ],
                        borderColor: [
                            'rgba(59, 130, 246, 1)',
                            'rgba(30, 58, 138, 1)',
                            'rgba(239, 68, 68, 1)',
                            'rgba(16, 185, 129, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    const entity = context.label;
                                    let details = '';
                                    if (entity === 'MINCETUR') details = 'Autoriza y fiscaliza la operación.';
                                    if (entity === 'SBS / UIF-Perú') details = 'Regula y supervisa la prevención de LA/FT.';
                                    if (entity === 'SUNAT') details = 'Supervisión fiscal y tributaria.';
                                    if (entity === 'Mininter') details = 'Seguridad y orden público.';
                                    return details;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                             display: false,
                        },
                        y: {
                           ticks: {
                                font: {
                                    size: 14,
                                    weight: '500'
                                }
                           }
                        }
                    }
                }
            });

            filterContent('todos');
        });
    </script>
</body>
</html>
